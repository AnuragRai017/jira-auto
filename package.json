{
  "name": "jira-automation-ts",
  "version": "1.0.0",
  "description": "Jira automation system for transitioning Support Tickets to Operations Tickets",
  "main": "dist/cli.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "customer-automation": "node dist/customer-field-automation.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "service:install": "node install-service.js",
    "service:uninstall": "node uninstall-service.js",
    "service:start": "node start-service.js",
    "service:stop": "node stop-service.js",
    "docker:build": "docker build -t jira-customer-automation .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:backup": "docker-compose --profile backup run --rm jira-backup-scanner"
  },
  "keywords": [
    "jira",
    "automation",
    "typescript",
    "support",
    "operations",
    "customer-fields"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "node-windows": "^1.0.0-beta.8",
    "winston": "^3.10.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
